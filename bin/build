set -e

image="manageiq/ui-components:latest" # Podman often assumes docker.io, but can be explicit if needed

# Build the image, which will build the package
podman build . -t "$image" --no-cache

# Extract the package from the image
container_id=$(podman create "$image")
package=$(podman run --rm -it --entrypoint /bin/bash "$image" -c "ls -1 manageiq-ui-components-*.tgz" | tr -d '\r')
podman cp "$container_id:/ui-components/$package" pkg
podman rm "$container_id"

echo
echo "Package 'pkg/$package' has been built."
echo

# Optionally publish the image
read -r -p "Publish the package now? (y/N) " -n 1
echo
echo
if [[ "$REPLY" =~ ^[Yy]$ ]]; then
    pushd pkg >/dev/null
    npm login
    npm publish --access public "$package"
    popd >/dev/null
else
    echo "You can manually publish the package with:"
    echo "    cd pkg"
    echo "    npm login"
    echo "    npm publish --access public $package"
fi
